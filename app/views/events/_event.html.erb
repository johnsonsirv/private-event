<div class="row">
			<div class="col-md-7">
					<%= image_tag "event-placeholder.png", class: "img-fluid" %>
				<div class="card">
					<div class="card-body">
						<h5 class="card-title"><%= link_to "#{event.name.titlecase}", event_path(id: event.id) %></h5>
						<p class="card-text"><%= event.description %> </p>
						<p> <%= fa_icon "map-marker" %> <%= event.location %> </p>
						<p> <%= fa_icon "calendar" %> <%= event.event_date %> | 
						<%= event_status_of event %>
						</p>
					</div>
				</div>
		</div>
			<div class="col-md-3">
				<%= image_tag "map-main-placeholder.jpg", class: "img-thumbnail" %>
			</div>
	</div>
	<div class="event-divider">	</div>