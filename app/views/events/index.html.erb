<% unless flash.empty? %>
	<div class="alert alert-danger">
			<strong> <%= flash[:message] %> </strong>
	</div>
<% end %>
<% @events.each do |e| %>
	<div class="row">
			<div class="col-md-7">
					<%= image_tag "event-placeholder.png", class: "img-fluid" %>
				<div class="card">
					<div class="card-body">
						<h5 class="card-title"><%= link_to "#{e.name.titlecase}", event_path(id: e.id) %></h5>
						<p class="card-text"><%= e.description %> </p>
						<p> Location: <%= e.location %> </p>
						<p> Event Date: <%= e.event_date %> </p>
						<p> Status: 
							<% if e.event_date < Date.today %> 
								<span class="badge badge-danger"> Past </span> 
							<% else %> 
							<span class="badge badge-info"> Upcoming </span>
							<% end %>
						</p>
					</div>
				</div>
		</div>
			<div class="col-md-3">
				<%= image_tag "map-main-placeholder.jpg", class: "img-thumbnail" %>
			</div>
	</div>
	<div class="event-divider">	</div>
<% end %>