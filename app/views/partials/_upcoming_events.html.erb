<h5 class="text-center"> Upcoming | <span class="badge badge-success">attending</span> </h5>
<% if @upcoming_events.empty? %>
	<%= content_tag :div, class: "card-body" do -%>
			<%= content_tag(:p, "See events happening around you!", class: "card-title") %>
			<%= link_to "All Events", events_path, class: "btn btn-primary btn-block" %>
	<% end -%>
<% end %>
<% @upcoming_events.each do |e| %>
	<div class="row my-event">
			
			<div class="col-md-12">
				<%= image_tag "event-placeholder.png", class: "img-fluid" %>
				<div class="card">
					<div class="card-body">
						<h5 class="card-title"><%= link_to "#{e.name.titlecase}", event_path(id: e.id) %></h5>
						<p> <%= fa_icon "map-marker" %> <%= e.location %>  | <%= fa_icon "calendar" %> <%= e.event_date %> </p>
						
				</div>
			</div>
		</div>
	</div>
<% end %>