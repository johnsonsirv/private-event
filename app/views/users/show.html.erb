
<% unless flash.empty? %>
	<div class="alert alert-success">
			<strong> <%= flash[:message] %> </strong>
	</div>
<% end %>
<h2 class="text-center"> My Events </h2>
<% @attendable_events.each do |e| %>
	<div class="row">
			<div class="col-md-7">
				<img src="https://db20n4868sjpl.cloudfront.net/img/event-placeholder.png?v2" class="img-fluid" alt="Event Banner">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title"><%= link_to "#{e.name.titlecase}", event_path(id: e.id) %></h5>
						<p class="card-text"><%= e.description %> </p>
						<p> Location: <%= e.location %> </p>
						<p> Event Date: <%= e.event_date %> </p>
						<p> Status: 
							<% if e.event_date < Date.today %> 
								<span class="badge badge-danger"> Past </span> 
							<% else %> 
							<span class="badge badge-info"> Upcoming </span>
							<% end %>
						</p>
				</div>
			</div>
		</div>
			<div class="col-md-3">
				<img src="https://www.ncgtp.com/NCGTP_Map_Images/map-main-placeholder.jpg" class="img-thumbnail" alt="events banner">
					 <%= link_to "Create Event", new_event_path, class: "btn btn-primary btn-block" %>
			</div>
	</div>
<% end %>
